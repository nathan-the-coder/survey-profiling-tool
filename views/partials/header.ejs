<header>
    <nav class="navbar shadow-sm py-2 <%= navbarClass %>" style="background-color: #457507">
        <div class="container-fluid px-3 px-md-4">
            <div class="d-flex justify-content-between align-items-center w-100">
                
                <%# We use d-flex flex-column to stack the text without adding height to the nav %>
                <a href="#" class="d-flex align-items-center text-white text-decoration-none">
                    <img class="rounded-circle" src="/images/logo.jpg" width="40" width="40" class="me-2" alt="Logo">
                    <div class="d-none d-sm-flex flex-column justify-content-center ms-2">
                        <span class="fw-bold fs-6 mb-0 lh-1">Archdiocese of Tuguegarao</span>
                        <small class="opacity-75 lh-1" style="font-size: 0.7rem;">Pastoral Office</small>
                    </div>
                </a>

                <% if (headerType === 'user' || headerType === 'archdiocese' || headerType === 'dashboard' || headerType === 'admin') { %>
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <span id="nameDisplay" class="d-none d-sm-inline">Loading...</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item text-danger" id="signoutBtn" href="/login"><i class="bi bi-box-arrow-right me-2"></i> Sign out</a></li>
                        </ul>
                    </div>
                    <script>
                        // Get username from sessionStorage and display it
                        (function() {
                            const username = sessionStorage.getItem('username') || 'Guest';
                            const nameDisplay = document.getElementById('nameDisplay');
                            if (nameDisplay) {
                                nameDisplay.textContent = username;
                            }
                        })();
                    </script>
                <% } else if (headerType === 'default') { %>
                    <a href="/login" class="btn btn-light btn-sm fw-semibold px-3 px-md-4 rounded-pill">
                        <i class="bi bi-person-circle"></i><span class="d-none d-md-inline ms-1">Login</span>
                    </a>
                <% } %>

            </div>
        </div>
    </nav>
</header>