<header>
    <nav class="navbar shadow-sm py-2 <%= navbarClass %>" style="background-color: #457507">
        <div class="container-fluid px-4 d-flex justify-content-between align-items-center">
            
            <%# We use d-flex flex-column to stack the text without adding height to the nav %>
            <a href="#" class="d-flex align-items-center text-white text-decoration-none">
                <img class="rounded-circle" src="/images/logo.jpg" width="45" height="45" class="me-2" alt="Logo">
                <div class="d-flex flex-column justify-content-center ms-2">
                    <span class="fw-bold fs-5 mb-0 lh-1">Archdiocese of Tuguegarao</span>
                    <small class="opacity-75 lh-1" style="font-size: 0.75rem;">Pastoral Office</small>
                </div>
            </a>

            <% if (headerType === 'user' || headerType === 'archdiocese') { %>
                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <span id="name" class="d-none d-sm-inline"><%= username || 'Username' %></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="profileDropdown">
                        <li><a class="dropdown-item text-danger" id="signoutBtn" href="login.html"><i class="bi bi-box-arrow-right me-2"></i> Sign out</a></li>
                    </ul>
                </div>
            <% } else if (headerType === 'default') { %>
                <a href="/login" class="btn btn-light btn-sm fw-semibold px-4 rounded-pill">
                    <i class="bi bi-person-circle"></i> Login
                </a>
            <% } %>

        </div>
    </nav>
</header>