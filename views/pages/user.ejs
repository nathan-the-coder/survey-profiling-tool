<%- include('../layouts/layout', {
    title: 'User Dashboard',
    bodyClass: 'd-flex flex-column min-vh-100 overflow-hidden',
    headerType: 'user',
    body: `
        <main class="flex-grow-1 d-flex">
            <div class="container d-flex flex-column align-items-center rounded-0 bg-light p-5">
                <h3>Search Participants</h3>
                <div class="mb-3 position-relative" style="width: 350px">
                    <input class="form-control" type="text" id="searchInput" placeholder="Enter name" autocomplete="off">
                    <div id="autocompleteList" class="position-absolute w-100 shadow-sm rounded bg-white d-none" style="z-index: 1000; max-height: 250px; overflow-y: auto"></div>
                </div>
                
                <div class="w-100 mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                        <h4 class="mb-0">All Participants</h4>
                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filterSection" aria-expanded="false" aria-controls="filterSection">
                            <i class="bi bi-funnel me-1"></i>Filters
                        </button>
                    </div>
                    
                    <!-- Filter Section -->
                    <div class="collapse mb-3" id="filterSection">
                        <div class="card card-body bg-white">
                            <div class="row g-2">
                                <div class="col-md-4 col-sm-6">
                                    <input type="text" class="form-control form-control-sm" id="filterName" placeholder="Filter by Name...">
                                </div>
                                <div class="col-md-4 col-sm-6">
                                    <input type="text" class="form-control form-control-sm" id="filterAddress" placeholder="Filter by Address...">
                                </div>
                                <div class="col-md-4 col-sm-6">
                                    <input type="text" class="form-control form-control-sm" id="filterParish" placeholder="Filter by Parish...">
                                </div>
                                <div class="col-md-4 col-sm-6">
                                    <select class="form-select form-select-sm" id="filterRelation">
                                        <option value="">All Relations</option>
                                        <option value="Head">Head</option>
                                        <option value="Spouse">Spouse</option>
                                        <option value="Child">Child</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="col-md-4 col-sm-6">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text">Age</span>
                                        <input type="number" class="form-control" id="filterMinAge" placeholder="Min">
                                        <input type="number" class="form-control" id="filterMaxAge" placeholder="Max">
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-6">
                                    <button type="button" class="btn btn-sm btn-outline-secondary w-100" id="clearFilters">
                                        <i class="bi bi-x-circle me-1"></i>Clear Filters
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-striped table-hover" id="participantsTable">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th>Name</th><th>Relation</th><th>Address</th><th>Parish</th><th>Age</th><th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="participantsTableBody">
                                <tr><td colspan="6" class="text-center">Loading participants...</td></tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <small class="text-muted" id="showingInfo">Showing 0 entries</small>
                        <nav aria-label="Table pagination">
                            <ul class="pagination pagination-sm mb-0" id="pagination">
                                <!-- Pagination will be inserted here -->
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            
            <div class="modal fade" id="participantModal" tabindex="-1" aria-labelledby="participantModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="participantModalLabel">Participant Details</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body" id="detailsContent"></div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    `,
    extraScripts: `<script src="/javascripts/user.js"></script>`
}) %>
