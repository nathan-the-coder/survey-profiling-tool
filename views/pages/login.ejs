<%- include('../layouts/layout', {
    title: 'Login',
    bodyClass: 'd-flex flex-column min-vh-100 bg-light',
    headerType: 'login',
    footerClass: 'bg-church',
    extraStyles: `
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
        <style>
            .login-wrapper {
                min-height: calc(100vh - 120px);
                display: flex;
                align-items: center;
                justify-content: center;
                padding: 2rem 1rem;
            }
            .login-card {
                background: white;
                border-radius: 16px;
                box-shadow: 0 4px 20px rgba(0,0,0,0.08);
                width: 100%;
                max-width: 480px;
                padding: 2.5rem;
                transition: box-shadow 0.2s ease;
            }
            .login-card:hover {
                box-shadow: 0 8px 30px rgba(0,0,0,0.12);
            }
            .login-header {
                text-align: center;
                margin-bottom: 2rem;
            }
            .login-logo {
                width: 80px;
                height: 80px;
                background: #457507;
                border-radius: 16px;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0 auto 1.5rem;
                box-shadow: 0 4px 15px rgba(69, 117, 7, 0.3);
            }
            .login-logo i {
                font-size: 2.5rem;
                color: white;
            }
            .login-title {
                color: #457507;
                font-weight: 600;
                font-size: 1.75rem;
                margin-bottom: 0.5rem;
                position: relative;
                padding-bottom: 12px;
            }
            .login-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background: linear-gradient(90deg, #457507, #6ba32a);
                border-radius: 2px;
            }
            .login-subtitle {
                color: #666;
                font-size: 0.95rem;
            }
            .form-label {
                font-weight: 500;
                color: #444;
                margin-bottom: 6px;
                font-size: 0.9rem;
            }
            .form-control {
                border-radius: 10px;
                border: 1.5px solid #e0e0e0;
                padding: 12px 16px;
                transition: all 0.2s ease;
            }
            .form-control:focus {
                border-color: #457507;
                box-shadow: 0 0 0 4px rgba(69, 117, 7, 0.1);
            }
            .form-control:hover {
                border-color: #b8d48a;
            }
            .input-group-text {
                background: #f8f9fa;
                border: 1.5px solid #e0e0e0;
                border-right: none;
                color: #457507;
                padding: 12px 16px;
                border-radius: 10px 0 0 10px;
            }
            .input-group .form-control {
                border-left: none;
                border-radius: 0 10px 10px 0;
            }
            .form-check-input:checked {
                background-color: #457507;
                border-color: #457507;
            }
            .form-check-input:focus {
                box-shadow: 0 0 0 0.2rem rgba(69, 117, 7, 0.25);
            }
            .btn-login {
                background: #457507;
                border: none;
                border-radius: 10px;
                padding: 14px 24px;
                font-size: 1rem;
                font-weight: 600;
                transition: all 0.2s ease;
                color: white;
            }
            .btn-login:hover {
                background: #365d06;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(69, 117, 7, 0.4);
            }
            .btn-login:active {
                transform: translateY(0);
            }
            .btn-outline-secondary {
                border-color: #e0e0e0;
                color: #666;
                border-radius: 10px;
                padding: 10px 20px;
                transition: all 0.2s ease;
            }
            .btn-outline-secondary:hover {
                background: #f8f9fa;
                border-color: #457507;
                color: #457507;
            }
            .link-green {
                color: #457507;
                text-decoration: none;
                font-weight: 500;
                transition: color 0.2s ease;
            }
            .link-green:hover {
                color: #365d06;
                text-decoration: underline;
            }
            .divider {
                display: flex;
                align-items: center;
                margin: 1.5rem 0;
                color: #999;
            }
            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                height: 1px;
                background: #e0e0e0;
            }
            .divider span {
                padding: 0 1rem;
                font-size: 0.85rem;
            }
            @keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
            .animate-fade-in {
                animation: fadeInUp 0.5s ease-out;
            }
            @media (max-width: 768px) {
                .login-wrapper { padding: 1rem; }
                .login-card {
                    padding: 1.5rem;
                    max-width: 100%;
                }
                .login-logo { width: 60px; height: 60px; }
                .login-logo i { font-size: 1.75rem; }
                .login-title { font-size: 1.5rem; }
                .form-control, .input-group-text { padding: 10px 12px; font-size: 14px; }
                .form-label { font-size: 13px; }
                .btn-login { padding: 12px 20px; font-size: 15px; }
            }
            @media (max-width: 480px) {
                .login-card { padding: 1.25rem; border-radius: 12px; }
                .login-logo { width: 50px; height: 50px; border-radius: 12px; }
                .login-logo i { font-size: 1.5rem; }
                .login-title { font-size: 1.25rem; }
                .login-subtitle { font-size: 0.85rem; }
                .form-label { font-size: 12px; }
            }
        </style>
    `,
    body: `
        <div class="login-wrapper">
            <div class="login-card animate-fade-in">
                <div class="login-header">
                    <div class="login-logo">
                        <i class="bi bi-person-lock"></i>
                    </div>
                    <h2 class="login-title">Welcome Back</h2>
                    <p class="login-subtitle">Sign in to access the Household Profiling system</p>
                </div>
                
                <form id="loginForm" method="POST">
                    <div class="mb-3">
                        <label class="form-label">Parish / Organization</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter your parish or organization name" required>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label text-muted" for="rememberMe" style="font-size: 0.9rem;">Remember me</label>
                        </div>
                        <a href="#" class="link-green" style="font-size: 0.9rem;">Forgot password?</a>
                    </div>
                    
                    <button type="submit" id="loginBtn" class="btn btn-login w-100 mb-3">
                        <span class="btn-text">Sign In</span>
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                    
                    <a href="/" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left me-2"></i>Back to Home
                    </a>
                </form>
                
                <div class="divider">
                    <span>Need help?</span>
                </div>
                
                <div class="text-center">
                    <a href="#" class="link-green">Contact Support</a>
                </div>
            </div>
        </div>
    `,
    extraScripts: `
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios@1.13.5/dist/axios.min.js"></script>
        <script src="/javascripts/login.js"></script>
    `
}) %>
