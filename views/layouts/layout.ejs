<%
    const _navbarClass = typeof navbarClass !== 'undefined' ? navbarClass : 'bg-church';
    const _footerClass = typeof footerClass !== 'undefined' ? footerClass : 'bg-success';
    const _headerType = typeof headerType !== 'undefined' ? headerType : 'default';
    const _username = typeof username !== 'undefined' ? username : '';
%>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | SJCB Household Profiling</title>
    
    <link rel="icon" type="image/jpeg" href="/images/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    
    <%- typeof extraStyles !== 'undefined' ? extraStyles : '' %>
    
    <script>
        window.API_URL = '<%= apiUrl %>';
    </script>
    
    <style>
        .bg-church { background-color: #457507; }
        .btn-church { background-color: #457507; color: white; border-color: #457507; }
        .btn-church:hover { background-color: #3a6206; color: white; border-color: #3a6206; }
        .text-church { color: #457507; }
    </style>
</head>

<body class="<%= typeof bodyClass !== 'undefined' ? bodyClass : 'd-flex flex-column min-vh-100' %>">
    <%- include('../partials/header', { navbarClass: _navbarClass, headerType: _headerType, username: _username }) %>
    
    <%- body %>
    
    <%- include('../partials/footer', { footerClass: _footerClass }) %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/main.js"></script>
    
    <%- typeof extraScripts !== 'undefined' ? extraScripts : '' %>
</body>

</html>